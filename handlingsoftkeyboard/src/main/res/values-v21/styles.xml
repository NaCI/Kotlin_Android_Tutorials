<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:singleLine">true</item>
        <item name="android:elevation">2dp</item>
        <item name="android:backgroundTint">@color/button_selector</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:fontFamily">@font/aladin</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>
</resources>